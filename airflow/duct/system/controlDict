FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     pimpleFoam;

startFrom       latestTime;

startTime       0;
stopAt          endTime;
endTime         0.01;
deltaT          0.00001;

writeControl    adjustableRunTime;
writeInterval   0.00001;

purgeWrite      0;

writeFormat     binary;
writePrecision  7;

writeCompression uncompressed;

timeFormat      fixed;
timePrecision   5;

runTimeModifiable yes;
adjustTimeStep    yes;
maxCo           1.0;

